<h1>Listing items</h1>

<table>
<thead>
  <tr>
    <th>L Code</th>
    <th>Image</th>
    <th>Title</th>
    <th>Price</th>
  </tr>
</thead>
  
<tbody>
  <% @items.each do |item| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

       <td><%= item.lcode %></td>

       <td><%= image_tag(item.img_url, class: 'list_image') %></td>
       
       <td class="list_description">
         <dl>
           <dt><%= item.title %></dt>
           <dd><%= truncate(strip_tags(item.description), length: 80) %></dd>
         </dl>
       </td>

       <td><%= item.price %></td>

         <td class="list_actions">      
           <%= link_to 'Show', item %>
           <%= link_to 'Edit', edit_item_path(item) %>
           <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %>  
        </td> 
       </tr>
  <% end %>
</tbody>     
</table>

<br />

