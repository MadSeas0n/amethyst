= form_for(@item) do |f|
  - if @item.errors.any?
    #error_explanation
      %h2
        = pluralize(@item.errors.count, "error")
        prohibited this item from being saved:
      %ul
        - @item.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :lcode
    %br/
    = f.text_field :lcode
  .field
    = f.label :description
    %br/
    = f.text_area :description, rows: 6
  .field
    = f.label :price
    %br/
    = f.text_field :price
  .field
    = f.label :image
    %br/
    = f.text_field :img_url
  .actions
    = f.submit